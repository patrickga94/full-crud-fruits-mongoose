{% layout 'layout.liquid'%}
{%block content%}

<div class="container-sm">
<form action="/user/signup" method="POST">
    <fieldset>
        <legend>New User</legend>
        <label class="form-label">
            Username: 
            <input
                class="form-control"
                type="text"
                name="username"
                placeholder="enter username"
                required
            >
        </label>
        <label>
            Password: 
            <input
                class="form-control"
                type="password"
                name="password"
                placeholder="enter password"
                required
            >
        </label>
    </fieldset>
    <input 
        type="submit" 
        value="Create Account"
    >
</form>
</div>








{% endblock %}